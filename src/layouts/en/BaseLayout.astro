---
import "/node_modules/katex/dist/katex.min.css";
import Profile from "../../components/en/Profile/ProfileCard.astro";
import BaseHead from "../../components/en/Core/BaseHead.astro";
import Header from "../../components/en/Core/Header.astro";
import Footer from "../../components/en/Core/Footer.astro";
import ThemeIcon from "../../components/ThemeIcon.astro";
import { ViewTransitions } from "astro:transitions";
import { SITE_TITLE, SITE_DESCRIPTION, TRANSITION_API } from "../../consts";
const {
  image,
  site_title = SITE_TITLE,
  site_description = SITE_DESCRIPTION,
  includeSidebar = true,
  PageID,
} = Astro.props;
---

<html lang="en" class="bg-base-300">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/@waline/client@v3/dist/waline.css"
    />
    <BaseHead title={site_title} description={site_description} image={image} />
    {TRANSITION_API && <ViewTransitions />}
  </head>
  <body>
    <script src="../../scripts/copybutton.mjs"></script>
    <Header title={SITE_TITLE} />
    <main class="main">
      <div class="profile">
        {includeSidebar && <Profile PageID={PageID} />}
      </div>
      <div class="background">
        <slot />
        <Footer />
      </div>
    </main>
    <ThemeIcon />
  </body>
</html>
