---
import AboutMain from "../../components/Pages/main/About.astro";
import { i18nObject } from "../../i18n/i18n-util";
import { loadLocaleAsync } from "../../i18n/i18n-util.async";

await loadLocaleAsync(Astro.currentLocale as "ar");
const LL = i18nObject(Astro.currentLocale as "ar");
---

<AboutMain
  langCode={Astro.currentLocale as "ar"}
  headerTitle={LL.ABOUT_PAGE_TITLE()}
  introTitle={LL.ABOUT_INTRO_TITLE()}
  firstLine={LL.ABOUT_FIRST_LINE()}
  secondLine={LL.ABOUT_SECOND_LINE()}
/>
